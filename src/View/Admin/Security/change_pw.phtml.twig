{% extends 'admin_layout.phtml.twig' %}

{% block title %}Change password{% endblock title %}

{% block body %}
<form action="" method="post">
	<div class="form-group">
		<label for="old_passw">Old password: </label>
		<input type="password" id="old_passw" class="form-control" name="old_passw" placeholder="old password">
	</div>
	<div class="form-group">
		<label for="new_passw">New password: </label>
		<input type="password" class="form-control" name="new_passw" id="new_passw"
			   placeholder="new password" value="{{ form.getNewPassw() }}">
	</div>
	<div class="form-group">
		<label for="repeated_new_passw">Repeat new password: </label>
		<input type="password" class="form-control" name="repeated_new_passw" id="repeated_new_passw"
			   placeholder="repeated new password" value="{{ form.getRepeatedNewPassw() }}">
	</div>
	<button type="submit" class="btn btn-default">Save</button>
</form>
{% endblock body %}